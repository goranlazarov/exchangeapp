<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="header" class="header sticky--header">
        <!-- Header Top Area -->
        <div class="header__top bg--blue">
            <div class="container">
                <div class="header__top__inner">
                    <ul class="header__top__info">
                        <li>
                            <a href="#">
                                <i class="flaticon-old-typical-phone"></i> 01354 568 787
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="flaticon-black-back-closed-envelope-shape"></i> info@taxco.com
                            </a>
                        </li>
                    </ul>
                    <div class="header__top__button">
                        <a class="cr-btn cr-btn--lg" href="appointment.html">
                            <span>Make an appointment </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="header__bottom bg--white">
            <div class="container d-none d-lg-block">
                <div class="header__bottom__inner">
                    <div class="header__logo">
                        <a href="http://www.acbsp.org/">
                            <img src="~/Content/css/images/logo_small.png" alt="header logo">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div>
        @RenderBody()

    </div>
    <footer id="footer" class="footer-area fixed--footer">
        <div class="footer-area__widgets section-padding--md bg--dark--light">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="footer-area__logo text-center">
                            <a href="index.html"><img src="~/Content/css/images/foot-logo.png" alt="footer logo"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-area__copyright bg--dark">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="copyright text-center">
                            ©COPYRIGHT, ALL RIGHTS RESERVED
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
